<div class="container my-5">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card p-4">
        <div class="card-body">
          <h2 class="card-title mb-4 text-center w-30 h4 bg-light">ユーザー情報編集</h2>
          <%= render 'layouts/errors', obj: @user %>
          <%= form_with model: @user, class: "mt-4" do |f| %>
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <%= f.submit "変更する", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
