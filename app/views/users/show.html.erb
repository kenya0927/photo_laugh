<div class="container">
  <h2 class="mb-4 text-center w-25 h4 bg-light">マイページ</h2>
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-3">ニックネーム</h5>
          <p class="card-text"><%= @user.name %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-3">メールアドレス</h5>
          <p class="card-text"><%= @user.email %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-4">
    <!--ゲストユーザーは編集ボタンを表示しない-->
    <% if @user.name != "guestuser" %>
    <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
    <%= link_to "いいね一覧", user_liked_comments_path(@user), class: "btn btn-secondary" %>
  </div>
  <h2 class="mb-4 text-center w-25 h4 bg-light">自分の投稿</h2>
  <%= render 'topics/index', topics: @topics %>
</div>
