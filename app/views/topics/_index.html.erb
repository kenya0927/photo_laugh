<div class="container">
  <div class="row">
    <% topics.each do |topic| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= image_tag topic.image, class: "card-img-top", alt: "image", style: "height: 200px; object-fit: cover;" %>
          <div class="card-body">
            <%= link_to topic_path(topic.id), class: "text-dark text-decoration-none" do %>
              <h5 class="card-title mb-3">お題： <%= topic.title %></h5>
            <% end %>
            <p class="card-text">ニックネーム：<%= topic.user.name %></p>
            <%= link_to "#{topic.topic_comments.count} コメント", topic_path(topic.id), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
   <nav aria-label="Page navigation example">
    <%= paginate topics, previous_label: 'Previous', next_label: 'Next', class: "pagination" %>
   </nav>

  </div>
</div>
