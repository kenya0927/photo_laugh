<h2 class="text-center w-25 h4 bg-light">投稿詳細</h2>

<div class="row">
  <div class="col-md-6">
    <%= image_tag @topic.image, class: "img-fluid rounded" %>
  </div>
  <div class="col-md-6">
    <h2 class="mt-3"><%= @topic.title %></h2>
    <p class="mb-1"><%= @topic.user.name %></p>
    <p class="mb-3"><%= @topic.created_at.strftime("%Y/%m/%d") %></p>

    <% if @topic.user == current_user %>
      <%= link_to "投稿を編集", edit_topic_path(@topic), class: "btn btn-primary" %>
      <%= link_to "投稿を削除", topic_path(@topic), method: :delete, data: { confirm: "本当に削除しますか？" },class: "btn btn-danger" %>
    <% end %>
  </div>
</div>

<div id="like_buttons_<%= @topic.id %>">
  <%= render 'likes/btn', topic: @topic %>
</div>

<div id= "comment_error">
  <%= render 'layouts/errors', obj: @topic_comment %>
</div>

<div id="comment_area">
  <%= render 'topic_comments/form', topic: @topic,topic_comment: @topic_comment %>
</div>
