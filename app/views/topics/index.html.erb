<h2>投稿一覧</h2>

<% @topics.each do |topic| %>
<div>
  <%= image_tag topic.image %>
  <div>
    <%= link_to topic_path(topic.id) do %>
    お題：<%= topic.title %>
    <% end %>
  </div>
  <p>ニックネーム：<%= topic.user.name %></p>
  <%= link_to "#{topic.topic_comments.count} コメント", topic_path(topic.id) %>
</div>
<% end %>